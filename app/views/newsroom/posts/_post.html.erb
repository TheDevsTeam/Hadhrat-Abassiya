<div class="col-sm-6 col-lg-4">
  <div class="card">
    <div class="card-block">
      <h4 class="card-title"><%= link_to post.title, post %></h4>
      <p class="tags"><%= raw post.tags.map { |t| link_to t.name, posts_path(tag: t.name ) }.join(', ') %></p>
      <br>
      <%= link_to post do %>
      <div class="card-topper" style="background-image: url(<%= post.banner_image_url %>);">
      </div>
      <% end %>
      <p class="card-text"><%= truncate(post.description, length: 130) %></p>
    </div>
    <div class="card-block">
      <p class="published-date"><%= post.display_day_published%>
      <!-- <p class="published-date">by <%= post.source%> -->
         <!-- <%= post.title %> -->
       </p>
      <%= link_to 'Read Story...', post.url, class: 'btn btn-read' %>
      <%= link_to 'Comments', post, class: 'btn btn-read' %>
      <%= link_to 'Share It', 'https://www.facebook.com/sharer/sharer.php?u=http://www.thenewspanel.com/', target: "_blank", class: 'btn btn-primary' %>
      <div class="fb-like" data-href="http://www.thenewspanel.com" data-layout="button" data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>
    </div>

  </div>
</div>
